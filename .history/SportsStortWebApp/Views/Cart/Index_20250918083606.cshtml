@model SportsStore.Domain.Models.cart 
@{
    ViewData["Title"]="giỏ hàng của bạn";

}

<h1>Giỏ hàng của bạn</h1>
<table class="table table-bordered table-striped">
 <thead>
 <tr>
 <th>Số lượng</th>
 <th>Sản phẩm</th>
 <th class="text-right">Giá</th>
 <th class="text-right">Tổng cộng</th>
 <th></th>
 </tr>
 </thead>
<tbody>
@foreach (var line in Model.Lines)
{
<tr>
<td class="text-center">@line.Quantity</td>
<td class="text-left">@line.Product.Name</td>
<td class="text-right">@line.Product.Price.ToString("C")</td>
<td class="text-right">@((line.Quantity*line.Product.Price).ToString("C")) 
</td>
<td class="text-center">
 <form asp-action="RemoveFromCart" method="post">
 <input type="hidden" name="ProductId" value="@line.Product.ProductID" />
 <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
}



 